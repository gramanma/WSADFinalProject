@model List<Recipe>
@{
    ViewData["Title"] = "Recipes // WSAD 2021";
}

<div class="text-center">
    <h1 class="display-4">Recipe List</h1>
    <table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Prep Time</th>
            <th>Cooking Time</th>
            <th>Servings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Recipe recipe in @Model)
        {
            <tr>
                <td>
                    <a asp-controller="Recipe" asp-action="RecipeDetails" asp-route-id="@recipe.recipeID">@recipe.recipeName</a>
                </td>
                <td>
                    @recipe.recipeDesc
                </td>
                <td>
                    @recipe.recipePrepTime
                </td>
                <td>
                    @recipe.recipeCookTime
                </td>
                <td>
                    @recipe.Servings
                </td>
            </tr>
        }
    </tbody>
</table>
</div>